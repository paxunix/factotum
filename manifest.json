{
    "name": "Factotum",

    // XXX: "homepage_url": "",

    "version": "0.0.1",

    "manifest_version": 2,

    "description": "User-defined functions for Chrome",

    "icons": {
        "128": "icons/factotum-128.png"
    },

    "omnibox": { "keyword": "f" },

    "default_locale": "en",

    "content_scripts": [{
        "matches": [ "<all_urls>" ],
        "js": [ "scripts/factotum-content.js" ]
    }],

    "permissions": [
        "<all_urls>",
        "chrome://favicon/",
        "experimental",
        "notifications",
        "tabs",
        "unlimitedStorage"
    ],

    "background": {
        "scripts": [
            "jquery/jquery-1.8.3.js",
            "scripts/getopt.js",
            "scripts/error.js",
            "scripts/fcommands.js",
            "scripts/factotum.js",
            "scripts/background.js"
        ]
    },

    "browser_action": {
        "default_icon": "icons/factotum-128.png",
        "default_title": "Factotum",
        "default_popup": "popup.html"
    },

    "incognito": "split"
}
