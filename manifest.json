{
    "name": "Factotum",

    "version": "0.0.1",

    "description": "User-defined functions for Chrome",

    "icons": {
        "128": "icons/factotum-128.png"
    },

    "omnibox_keyword": "f",

    "default_locale": "en",

    // Request all the permissions we can.
    "permissions": [
        "bookmarks",
        "cookies",
        "experimental",
        "geolocation",
        "history",
        "http://*/*", "https://*/*",
        "management",
        "notifications",
        "tabs",
        "unlimited_storage"
    ],

    "background_page": "background.html",

    "browser_action": {
        "default_icon": "icons/factotum-128.png",
        "default_title": "Factotum",
        "popup": "popup.html"
    },

    "incognito": "split"
}
