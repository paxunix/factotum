{
    "name": "Factotum",

    // XXX: "homepage_url": "",

    "minimum_chrome_version": "13", // XXX:  I think

    "version": "0.0.1",

    "description": "User-defined functions for Chrome",

    "icons": {
        "128": "icons/factotum-128.png"
    },

    "omnibox": { "keyword": "f" },

    "default_locale": "en",

    "content_scripts": [{
        "matches": [ "<all_urls>" ],
        "js": [ "scripts/factotum-content.js" ]
    }],

    "permissions": [
        "<all_urls>",
        "chrome://favicon/",
        "experimental",
        "notifications",
        "tabs",
        "unlimitedStorage"
    ],

    "background_page": "background.html",

    "browser_action": {
        "default_icon": "icons/factotum-128.png",
        "default_title": "Factotum",
        "popup": "popup.html"
    },

    "incognito": "split"
}
