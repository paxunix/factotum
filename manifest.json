{
    "name": "Factotum",

    "version": "0.0.1",

    "description": "User-defined functions for Chrome",

    "icons": {
        "128": "icons/factotum-128.png"
    },

    "default_locale": "en",

    // Request all the permissions we can.
    "permissions": [
        "bookmarks",
        "http://*/*", "https://*/*",
        "notifications",
        "tabs",
        "unlimited_storage"
    ],

    "background_page": "background.html",

    "content_scripts": [
        {
            "matches": [ "http://*/*", "https://*/*" ],
            "js": [ "scripts/hotkey.js" ],
            "all_frames": true
        }
    ]
}
